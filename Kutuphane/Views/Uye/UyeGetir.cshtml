@model Kutuphane.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UyeGuncelle", "uye", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(p => p.ID)
        @Html.TextBoxFor(p => p.ID, new { @readonly = "readonly" })
        <br />
        <label>Üye Adı</label>
        @Html.TextBoxFor(p => p.AD, new { @class = "form-control" })
        <label>Üye Soyadı</label>
        @Html.TextBoxFor(p => p.SOYAD, new { @class = "form-control" })
        <label>Mail</label>
        @Html.TextBoxFor(p => p.MAIL, new { @class = "form-control" })
        <label>Telefon</label>
        @Html.TextBoxFor(p => p.TELEFON, new { @class = "form-control" })
        <label>K.ADI</label>
        @Html.TextBoxFor(p => p.KULLANICIADI, new { @class = "form-control" })
        <label>SIFRE</label>
        @Html.TextBoxFor(p => p.SIFRE, new { @class = "form-control" })
        <label>OKUL</label>
        @Html.TextBoxFor(p => p.OKUL, new { @class = "form-control" })
        <label>Fotoğraf Linki</label>
        @Html.TextBoxFor(p => p.FOTOGRAF, new { @class = "form-control" })

    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

